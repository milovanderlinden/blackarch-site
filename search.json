---
layout: null
---
{% assign packages = site.data.packages | sort: 'build' | reverse %}
[
  {% for member in packages %}
    {
      "title"    : "{{ member.name }}",
      "version"    : "{{ member.vers}}",
      "categories" : [
        {% assign cats = member.group | split: ';' %}
        {% for cat in cats %}
            {% assign caturl = '/packages/' | append: cat | append: '.html' %}
            {
            "url": "{{ caturl | absolute_url }}",
            "name":"{{ cat }}"
            }{% unless forloop.last %},{% endunless %}
        {% endfor %}
        ],
      "description": "{{ member.desc | escape }}",
      "url"      : "{{ member.url }}",
      "date"     : "{{ member.build | date: "%Y-%m-%dT%H:%M:%S.000Z"}}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]